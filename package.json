{
  "name": "notification-bot",
  "version": "1.0.0",
  "description": "Telegram notification bot for Google Sheets payments",
  "scripts": {
    "login": "clasp login",
    "create": "cd gas && clasp create --type standalone --title \"NotificationBot Library\"",
    "open": "cd gas && clasp open",
    "push": "cd gas && clasp push",
    "pull": "cd gas && clasp pull",
    "watch": "cd gas && clasp push --watch",
    "redeploy": "node deploy.js"
  },
  "devDependencies": {
    "@google/clasp": "^3.1.3",
    "@types/google-apps-script": "^2.0.8",
    "dotenv-cli": "^11.0.0"
  },
  "keywords": [
    "google-apps-script",
    "telegram",
    "notifications"
  ],
  "license": "MIT"
}
